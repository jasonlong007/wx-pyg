page{
  background: #dedede;
  padding: 20rpx;
}
.search_row{
 height: 60rpx;
 display: flex;
 justify-content: space-between;
}
.search_row input{
 flex: 3;
 height: 100%;
 background: #fff;
 padding-left: 30rpx;
 margin-right: 10rpx;
}
.search_row button{
  flex: 1;
  width: 40rpx;
  height: 100%;

  padding: 0 10rpx;
  margin:0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
   margin-left: 10rpx;
}
.search_content{
  margin-top: 50rpx;
}
.search_item{
  background: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  
}